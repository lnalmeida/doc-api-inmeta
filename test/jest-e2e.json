{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..", 
  "testEnvironment": "node",
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "maxWorkers": 1,
  "runInBand": true,
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/test/e2e/"]
}